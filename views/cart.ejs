<body>
  <div class="container" id="container">
    <ul>
    <% let total = 0; %>
    <% for (let i=0; i<cart.length; i++) { %>
      <li>
        <div class="item" id="p1">
          <img src="<%= cart[i].image %>" alt="<%= cart[i].name %>">
          <div class="line">
            <p><%= cart[i].name %></p>
            <span class="product-price">₹ <%= cart[i].price %></span>
            <span class="old-price">₹ 3,694</span><br>
            <form method="post" action="/remove_cart">
              <a href="#" class="button button--removecart" data-index="<%= cart[i].id %>">remove</a>
            </form>
            <% total += cart[i].price; %>
          </div>
        </div>
      </li>
    <% }; %>
    </ul>
    <p>Total Price ₹<%= total %></p>
  </div>
  <script src="/index.js"></script>
</body>
