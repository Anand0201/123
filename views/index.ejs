<body>
    <div class="border"></div>

    <div class="navbar" id="navbar">
        <img src="/images/logo/logo.png" alt="" />
        <div class="add-logo border">
            <i class="fa-solid fa-location-dot"></i>
            <p class="address">Select your address</p>
        </div>
        <div class="searchbar">
            <input type="search" id="searchin" placeholder="Search here" />
            <button><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
        <ul class="menu" id="menu">
            <li><a href="/" z>Home</a></li>
            <li><a href="/about">About us</a></li>
            <li><a href="#">Return &amp; Order</a></li>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <a href="/login">Login</a>
            </button>
            <div class="add-to-cart">
                <a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
                <span class="cart-count" id="cart-count">0</span>
            </div>
        </ul>


        <div class="hamburger" id="hamburger">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
    </div>


    <div class="content">
        <marquee>
            <h1>"Shop Smart, Shop Online: Your One-Stop Destination for All Your Needs!"</h1>
        </marquee>
    </div>

    <div class="herobg">

        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="3000">
                    <img src="/images/hero bg/2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-bs-interval="3000">
                    <img src="/images/hero bg/3.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-bs-interval="3000">
                    <img src="/images/hero bg/1.jpeg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="Newlaunchis">
        <section>
            <h2 class="section1"><u>New Launches</u></h2>
            <div class="container3" id="container3">
                <ul>
                    <li>
                        <% for(let i=0; i<7; i++) { %>
                        <a href="">
                            <div class="item">
                                <img src="<%= products[i].image %>" class="img" alt="<% products[i].name %>">
                                <div class="line">
                                    <p><%= products[i].name %></p>
                                    <span class="product-price">₹ <%= products[i].price %></span>
                                    <span class="old-price">₹ 4,694</span><br>
                                    <form method="post" action="/add_cart">
                                        <a href="#" class="button">Buy</a>
                                        <a href="#" class="button button--cart" data-id="<%= products[i].id %>">Add to Cart</a>
                                    </form>
                                </div>
                            </div>
                        </a>
                        <% }; %>
                    </li>
                </ul>
            </div>
        </section>
    </div>
